    style #instantclick{position:fixed;top:0;left:0;width:100%;pointer-events:none;z-index:2147483647;transition:opacity .25s .1s}.instantclick-bar{background:#29d;width:100%;margin-left:-100%;height:2px;transition:all .25s}
  body.home-template
    header#menu-button.expanded
      a
        i.fa.fa-align-justify
    aside.cover(style="background: url(/images/background-cover-2.jpg) center/cover no-repeat fixed")
      div.cover.container
        div.profile
          a#avatar-link(title="link to homepage for 破音万里" href="/#open")
            img.avatar.rounded.hvr-buzz-out(src="images/4621638.jpeg" alt="破音万里")
            h1#profile-title Purchas Collection
            h3#profile-resume Software Engineer
          hr.divider.long
          p Thoughts, stories and ideas
          hr.divider.short
          div.navigation
            div.profile.contact
              nav.navigation.left
                ul.links
                  li.nav-posts
                    a(href="/#open") Posts
              include social
          //- {{> search }}
    include playlist
    script(src="//cdnjs.cloudflare.com/ajax/libs/zepto/1.1.6/zepto.min.js",type="text/javascript",charset="utf-8")
