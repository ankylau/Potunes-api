block body
  head
    title #{title}
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible",content="IE=edge")
    meta(name="HandheldFriendly",content="True")
    meta(name="MobileOptimized",content="320")
    meta(name="apple-mobile-web-app-capable",content="yes")
    meta(name="apple-mobile-web-app-status-bar-style",content="black-translucent")
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    meta(property="og:site_name",content="程序车的炸鸡")
    meta(property="og:type",content="website")
    meta(property="og:title",content="程序车的炸鸡")
    meta(property="og:description",content="Thoughts, stories and ideas.")
    meta(property="og:url",content="http://poche.fm/")
    meta(property="og:image",content="/images/background-cover-2.jpg")
    link(rel="icon",type="image/png",href="/images/favicon.png")
    link(href="/assets/images/favicon.png",rel="shortcut icon",type="image/png")
    link(href="/apple-touch-icon-precomposed.png",rel="apple-touch-icon")

    link(rel="stylesheet",type="text/css",href="/stylesheets/tomorrow.css")
    script(src='//cdn.bootcss.com/jquery/3.1.1/jquery.js')
    link(rel="stylesheet",type="text/css",href="/stylesheets/vno.css")
  body.home-template
    span.mobile.btn-mobile-menu
      i.fa.fa-list.btn-mobile-menu__icon
      i.fa.fa-angle-up.btn-mobile-close__icon.hidden
  include side_panel
  div.content-wrapper
    div.content-wrapper__inner
      div.main-post-list
        ol.post-list
          include posts
      include footer

  block script
    script(src='//cdn.bootcss.com/jquery/3.1.1/jquery.min.js')
    script(src='/javascripts/main.js')
    script(src='javascripts/highlight.pack.js')
    script hljs.initHighlightingOnLoad();
