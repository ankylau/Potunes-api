extends layout

block content
  body
    include header
    main
      div.container
        form.details(method='post', action='/api/admin/tracks/new')
          div.row.col.s10
            div.input-field
              input#track_artist(type='text', name='track_artist')
              label 歌手名
          div.row.col.s10
            div.input-field
              input#track_name(type='text', name='track_name')
              label 歌曲名
          div.row.col.s10
            div.input-field
              input#track_cover(type='text', name='track_url')
              label 地址信息『MatthewKomaHardToLoveAcoustic』
          div.row.col.s10
            div.input-field
              textarea.materialize-textarea#track_lrc(type='text', name='track_lrc')
              label 默认歌词
          div.row.col.s10
            div.input-field
              textarea.materialize-textarea#track_lrc_cn(type='text', name='track_lrc_cn')
              label 中文歌词
          div
            button.btn.waves-effect.waves-light Submit
