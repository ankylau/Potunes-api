extends layout

block content
  head

  body
    script(src='/javascripts/common.js')
    include header
    div.row
      div.col.s6.offset-s3
        table.bordered.highlight
          thead
            tr.teal-text
              th(data-field='id') #
              th(data-field='name') Name
              th(data-field='op') Operations
          tbody
            each a in articles
              tr
                td #{a.article_id}
                td 
                  a.pink-text(href='/api/admin/articles/' + a.article_id) #{a.article_title}
                td.left-border
                  a.pink-text.editBtn.edit(href='/api/admin/articles/' + a.article_id, data-id=id)
                    span.fa.fa-edit.fa-lg
                  a.pink-text.removeBtn.edit
                    span.fa.fa-trash.fa-lg
                    
      
